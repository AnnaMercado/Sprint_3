    <script>
        function toggleComplete(checkbox) {
            const row = checkbox.closest('tr');
            const statusCell = row.querySelector('td:nth-child(6) span');
            const taskItems = row.querySelectorAll('td');

            if (checkbox.checked) {
                statusCell.textContent = 'Completed';
                statusCell.classList.remove('bg-blue-500', 'text-white');
                statusCell.classList.add('bg-green-500', 'text-white');
                taskItems.forEach((cell, index) => {
                    if (index !== 5 && index !== 6) {
                        cell.style.textDecoration = "line-through";
                    }
                });
            } else {
                statusCell.textContent = 'Pending';
                statusCell.classList.remove('bg-green-500', 'text-white');
                statusCell.classList.add('bg-blue-500', 'text-white');
                taskItems.forEach((cell, index) => {
                    if (index !== 5 && index !== 6) {
                        cell.style.textDecoration = "none";
                    }
                });
            }
        }
    </script>
