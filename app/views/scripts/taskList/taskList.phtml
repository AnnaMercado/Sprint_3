    <!-- the toggle script is js and later it can be added to the jc folder provided we want to do a check box complte  -->
    <script>
        function toggleComplete(checkbox) {
            const row = checkbox.closest('tr');
            const taskItems = row.querySelectorAll('.task-item');
            const status = row.querySelector('.status');

            if (checkbox.checked) {
                taskItems.forEach(item => item.classList.add('line-through', 'text-gray-500'));
                status.textContent = 'Done';
                status.classList.remove('text-pending');
                status.classList.add('text-completed');
            } else {
                taskItems.forEach(item => item.classList.remove('line-through', 'text-gray-500'));
                status.textContent = 'Pending';
                status.classList.remove('text-completed');
                status.classList.add('text-pending');
            }
        }
    </script>
